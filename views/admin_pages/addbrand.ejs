<head>
    <%- include ('../partials/head') -%>

        <style>
            .bd-placeholder-img {
                font-size: 1.125rem;
                text-anchor: middle;
                -webkit-user-select: none;
                -moz-user-select: none;
                -ms-user-select: none;
                user-select: none;
            }
            
            @media (min-width: 768px) {
                .bd-placeholder-img-lg {
                    font-size: 3.5rem;
                }
            }
        </style>
</head>

<header>
    <a href="/login"><img src="/images/logo/prev3.png" onmouseover="this.src='/images/logo/prev4.png'" onmouseout="this.src='/images/logo/prev3.png'" alt="Logo" width="80" height="70"></a>
</header>


<body>
    <form class="form-signin" action="/admin/addbrand" method="POST">
        <div class="text-center mb-4">
            <!-- <img class="mb-4" src="/images/izle_logo2.png" alt="logo"> -->
            <h1 class="h3 mb-3 font-weight-normal" style="margin-top:10%;">Brand Name</h1>
        </div>
        <div class="row justify-content-center">
            <div class="form-label-group col-md-4">
                <input type="text" id="inputUsername" name="brandname" class="form-control" placeholder="Choose Your Brand">

                <div class="row justify-content-center">
                    <button class="btn btn-lg bg-dark btn-block col-md-2" id="nameproducts" type="submit">Submit</button>

                    <% if(locals.errors) { %>
                        <ul class="alert alert-danger" role="alert">
                            <% Object.values(errors).forEach(function(error){ %>
                                <li>
                                    <%= error.msg %>
                                </li>
                                <% }) %>
                        </ul>
                        <% } %>



                </div>
            </div>

    </form>
</body>

</html>