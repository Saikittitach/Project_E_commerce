<head>
    <%- include ('../partials/head') -%>
        <title>Add products</title>
</head>
<header>
    <a href="/"><img src="/images/logo/prev3.png" onmouseover="this.src='/images/logo/prev4.png'" onmouseout="this.src='/images/logo/prev3.png'" alt="Logo" width="80" height="70"></a>
</header>
<div class="container">
    <div class="text-center mb-4">

        <h1 class="h3 mb-3 font-weight-normal">Add Product</h1>
    </div>
    <form action="/admin/addproducts" method="POST">
        <div class="row justify-content-center">
            <div class="form-group col-md-4 align-items-center">
                <label for="text">Name of Product :</label>
                <input type="text" class="form-control" name="nameproducts" id="inputProduct">
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="form-group col-md-4">
                <label for="inputPassword4">Price :</label>
                <input type="number" class="form-control" name="price" id="inputPrice">
            </div>
        </div>

        <div class="form row justify-content-center">
            <div class="form-group col-md-4">
                <label for="inputState">Brand</label>
                <select id="inputState" class="form-control" name="brand">
                    <% brand.forEach(function(brands){ %>
                    <option> <%= brands.brand %> </option>
                    <% }) %>
                </select>
            </div>
        </div>




        <form>
            <div class="row justify-content-center">
                <div class="form-group col-md-4">
                    <label for="exampleFormControlFile1">Insert Images</label>
                    <input type="url" name="img" class="form-control-file" id="exampleFormControlFile1" placeholder="Link images">
                </div>
            </div>
            <div class="row justify-content-center">
                <button class="btn btn-lg btn-primary btn-block col-2" type="submit">ADD</button>
            </div>

        </form>


</div>