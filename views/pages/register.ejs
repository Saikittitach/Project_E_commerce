<head>
    <%- include ('../partials/head') -%>
</head>

<header>
    <a href="/login"><img src="/images/logo/prev3.png" onmouseover="this.src='/images/logo/prev4.png'" onmouseout="this.src='/images/logo/prev3.png'" alt="Logo" width="80" height="70"></a>
</header>


<body>
    <form class="form-signin" action="/register" method="POST">
        <div class="text-center mb-4">

            <h1 class="h3 mb-3 font-weight-normal" style="margin-top:10%;">Register</h1>
        </div>
        <div class="row justify-content-center">
            <div class="form-label-group col-md-4">
                <input type="username" id="inputUsername" name="username" class="form-control" placeholder="Username" required>
                <label for="inputEmail"></label>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="form-label-group col-md-4">
                <input type="email" id="inputEmail" name="email" class="form-control" placeholder="Email" required autofocus>
                <label for="inputEmail"></label>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="form-label-group col-md-4">
                <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password" required>
                <label for="inputPassword"></label>
            </div>
        </div>
