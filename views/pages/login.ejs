<header>
    <a  href="/"><img src="/images/logo/prev3.png" onmouseover="this.src='/images/logo/prev4.png'" onmouseout="this.src='/images/logo/prev3.png'" alt="Logo" width="80" height="70"></a>
</header>

<body>
    <form class="form-signin" action="/login" method="POST">
        <div class="text-center mb-4">
            <img class="mb-4" src="/images/logo/izle_logo4.png" alt="Logo">
            <h1 class="h3 mb-3 font-weight-normal">Login</h1>

        </div>
        <div class="row justify-content-center">
            <div class="form-label-group col-md-3">
                <input type="username" id="inputUsername" name="username" class="form-control" placeholder="Username" required>
                <label for="inputEmail"></label>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="form-label-group col-md-3">
                <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password" required>
                <label for="inputPassword"></label>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="remember" value="remember-me"> Remember me &nbsp;&nbsp;&nbsp;
                </label>
            </div>
            <a href="/register">Register?</a>
        </div>



        <div class="row justify-content-center">
            <button class="btn btn-lg bg-dark btn-block col-md-2" id="nameproducts" type="submit">Sign in</button>

        </div>

        <!-- <p class="mt-5 mb-3 text-muted text-center">&copy; 2017-2020</p> -->
    </form>
